<Window x:Class="Application_00003741.AllItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_00003741"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        Title="AllItemWindow" Height="768" Width="1024">

    <Window.Resources>
        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="Margin" Value="0,10,10,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="buttonClickedStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Margin" Value="0,10,10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="BorderBrush" Value="#333"/>
        </Style>

        <Style x:Key="textBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="#aaa"/>
        </Style>

        <Style x:Key="textBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#eee"/>
            <Setter Property="Foreground" Value="#aaa"/>
        </Style>

        <Style x:Key="datePickerStyle" TargetType="DatePicker">
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
        </Style>

        <Style x:Key="comboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

    </Window.Resources>
    <DockPanel >
        <Grid DockPanel.Dock="Top" Height="50" Background="#333333">
            <Button     
                    Click="Back"
                    HorizontalAlignment="Left"
                    Background="#00000000" 
                    Padding="0,0,0,0"
                    BorderThickness="2"
                    BorderBrush="White"
                    Margin="5">
                <Image Source="Resources/back.png" />
            </Button>
        </Grid>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical">
            <Grid  Margin="20">
                <StackPanel Orientation="Vertical">
                    <StackPanel Name="All" Margin="0" Orientation="Horizontal">
                        <Button Content="All" 
                                Width="80"
                                Click="OnAll"
                                Height="30"
                                Style="{StaticResource buttonClickedStyle}">
                        </Button>
                        <Button Content="Computer"     
                                Click="OnComputer"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Accessoires" 
                                Click="OnAccessoires"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Software" 
                                Click="OnSoftware"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                    </StackPanel>
                    <StackPanel Name="Computer" Visibility="Collapsed" Margin="0" Orientation="Horizontal">
                        <Button Content="All" 
                                Click="OnAll"
                                Width="80"
                                Height="30"
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Computer" 
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonClickedStyle}">
                        </Button>
                        <Button Content="Accessoires" 
                                Click="OnAccessoires"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Software" 
                                Click="OnSoftware"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                    </StackPanel>
                    <StackPanel Name="Accessoires" Visibility="Collapsed" Margin="0" Orientation="Horizontal">
                        <Button Content="All" 
                                Click="OnAll"
                                Width="80"
                                Height="30"
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Computer" 
                                Click="OnComputer"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Accessoires" 
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonClickedStyle}">
                        </Button>
                        <Button Content="Software" 
                                Click="OnSoftware"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                    </StackPanel>
                    <StackPanel Name="Software" Visibility="Collapsed" Margin="0" Orientation="Horizontal">
                        <Button Content="All" 
                                Click="OnAll"
                                Width="80"
                                Height="30"
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Computer" 
                                Click="OnComputer"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Accessoires" 
                                Click="OnAccessoires"
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonStyle}">
                        </Button>
                        <Button Content="Software" 
                                Width="80"
                                Height="30"                                
                                Style="{StaticResource buttonClickedStyle}">
                        </Button>
                    </StackPanel>

                    <Border BorderBrush="#333" BorderThickness="1" Padding="20">
                        <StackPanel Orientation="Horizontal">
                            <GroupBox Padding="0,0,0,10" Width="250" Margin="0,0,0,10" FontSize="15" Header="" >
                                <StackPanel Orientation="Vertical">
                                    <Button                                    
                                            Content="Edit"  
                                            Click="Edit"
                                            Padding="5"
                                            Margin="10,10,10,0"                                                                              
                                            Style="{StaticResource buttonStyle}">
                                    </Button>
                                </StackPanel>
                            </GroupBox>

                                <DataGrid 
                                    Margin="10"
                                    Height="200"
                                    Name="dataGridItemAll" 
                                    SelectionMode="Single"
                                    ScrollViewer.CanContentScroll="True"
                                    IsReadOnly="True" 
                                    CanUserSortColumns="False" 
                                    ItemsSource="{Binding}" 
                                    HorizontalGridLinesBrush="#FFCCCCCC" 
                                    VerticalGridLinesBrush="#FFCCCCCC"
                                    BorderThickness="0.5" 
                                    FontSize="13"
                                    HorizontalAlignment="Stretch" BorderBrush="White">
                                </DataGrid>
                        </StackPanel>

                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
